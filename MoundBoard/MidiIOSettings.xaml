<Window x:Class="MoundBoard.MidiIOSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="MidiIOSettings" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" x:Name="MidiInPortListBox" SelectionChanged="MidiInPortListBox_SelectionChanged"/>
        <ListBox Grid.Column="1" x:Name="MidiOutPortListBox" SelectionChanged="MidiOutPortListBox_SelectionChanged"/>
        <Button Height="20" VerticalAlignment="Bottom" Click="ButtonBase_OnClick" />
    </Grid>
</Window>
