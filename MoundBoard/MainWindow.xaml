<Window x:Class="MoundBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Left" Width="200" Background="Coral">
        <TextBlock VerticalAlignment="Top" Margin="10,10,10,0" FontSize="30">MoundBert</TextBlock>
        <Button Height="60" Margin="20,100,20,0" VerticalAlignment="Top" Click="IOButtonBase_OnClick" Background="Chocolate">MidiIOSettings</Button>
        <Button Height="60" Margin="20,180,20,0" VerticalAlignment="Top" Click="MappingButtonBase_OnClick" Background="Chocolate">Mapping</Button>
        <Button Height="60" Margin="20,260,20,0" VerticalAlignment="Top" Click="ButtonBase_OnClick" Background="Chocolate">Message</Button>
        <Button Height="60" Margin="20,340,20,0" VerticalAlignment="Top" Click="LayoutsButtonBase_OnClick" Background="Chocolate">Layouts</Button>
        <CheckBox VerticalAlignment="Center" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked">Martin</CheckBox>

    </Grid>
</Window>
